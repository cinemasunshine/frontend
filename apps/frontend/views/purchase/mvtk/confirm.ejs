<% layout('./layouts/purchase/layout') -%>
<% block('script', '<script src="/js/purchase/mvtk/confirm.js"></script>') -%>
<div class="purchase-mvtk-confirm">
    <h1 class="page-ttl"><%- __('purchase.mvtk.confirm.page_ttl') %></h1>
    <p class="read"><%- __('purchase.mvtk.confirm.read') %></p>

    <form method="post">
        <ul class="box radius bg-light-gray mb-medium mvtk-lists">
            <% for (const tickets of mvtk) { %>
            <% if (tickets.ykknInfo.length > 0) { %>
            <% for (const ticket of tickets.ykknInfo) { %>
            <li>
                <dl class="d-table">
                    <dt class="d-td"><%- __('common.mvtk_code') %> <%= tickets.knyknrNo %></dt>
                    <dd class="d-td width-medium">
                        <div class="button gray-button not-link">
                            <a href="#">
                                <div><%= MVTK_TICKET_TYPE.find((ticketType) => {return (ticketType.code === ticket.ykknshTyp)}).name %></div>
                            </a>
                        </div>
                    </dd>
                </dl>
            </li>
            <% } %>
            <% } %>
            <% } %>
        </ul>
        

        <div class="button-area clearfix">
            <div class="button next-button blue-button"><button class="icon-next-white" type="submit"><%- __('purchase.mvtk.confirm.next') %></button></div>
            <div class="prev-link"><a class="icon-prev-black"href="/purchase/mvtk"><%- __('purchase.mvtk.confirm.prev') %></a></div>
        </div>
        <input type="hidden" name="transaction_id" value="<%= transactionId %>">
    </form>
<%- partial('../../layouts/site_seal') %>
</div>