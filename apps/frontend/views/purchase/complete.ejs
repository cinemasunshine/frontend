<div class="purchase-complete">
    <h1 class="page-ttl"><%- __('purchase.complete.page_ttl') %></h1>
    <p class="read"><%- __('purchase.complete.read') %></p>

    <ul class="box bg-light-gray info mb-medium">
        <li>
            <dl>
                <dt><%- __('common.theater') %> / <%- __('common.screen') %></dt>
                <dd><%= performance.theater.name[__('lang')] %> / <%= performance.screen.name[__('lang')] %></dd>
            </dl>
        </li>
        <li>
            <dl>
                <dt><%- __('common.film_title') %></dt>
                <dd><%= performance.film.name[__('lang')] %></dd>
            </dl>
        </li>
        <li>
            <dl>
                <dt><%- __('common.appreciation_date') %></dt>
                <dd><%= moment(performance.day).format('YYYY年MM月DD日') %> <%= moment(performance.time_start, 'hmm').format('HH:mm') %> - <%= moment(performance.time_end, 'hmm').format('HH:mm') %></dd>
            </dl>
        </li>
        <li>
            <dl>
                <dt><%- __('common.seat') %> / <%- __('common.ticket') %></dt>
                <dd>
                    <% for (let seat of updateReserve.list_qr) { %>
                    <p><%= seat.seat_num %> <%= reserveTickets[seat.seat_num].ticket_name %></p> 
                    <% } %>
                </dd>
            </dl>
        </li>
        <li>
            <dl>
                <dt><%- __('common.amount_spent') %></dt>
                <dd>￥<%= price %></dd>
            </dl>
        </li>
    </ul>

    <h2 class="page-ttl"><%- __('purchase.complete.entry') %></h2>
    <p class="read"><%- __('purchase.complete.entry_read') %></p>

    <ul class="box bg-light-gray entry-method">
        <li>
            <dl>
                <dt>
                    <span class="text-icon-dark-blue small-text"><%- __('purchase.complete.entry') %>1</span>
                    <strong><%- __('purchase.complete.entry_01_title') %></strong>
                </dt>
                <dd>
                    <p><%- __('purchase.complete.entry_01_read') %></p>
                    <div class="image"><img src="" alt=""></div>
                    <div class="button blue-button">
                        <a href="<%- url('method.ticketing') %>" target="_blank"><%- __('purchase.complete.entry_01_button') %></a>
                    </div>
                </dd>
            </dl>
        </li>
        <li>
            <dl>
                <dt>
                    <span class="text-icon-dark-blue small-text"><%- __('purchase.complete.entry') %>2</span>
                    <strong><%- __('purchase.complete.entry_02_title') %></strong>
                </dt>
                <dd>
                    <p><%- __('purchase.complete.entry_02_read') %></p>
                    <div class="image"><img src="" alt=""></div>
                    <div class="button blue-button">
                        <a href="<%- url('inquiry') %>" target="_blank"><%- __('purchase.complete.entry_02_button') %></a>
                    </div>
                </dd>
            </dl>
        </li>
    </ul>

    <div class="button-area clearfix">
        <div class="prev-link"><a href="<%- url('index') %>"><%- __('purchase.complete.prev') %></a></div>
    </div>

</div>