<div class="purchase-complete">
    <h1 class="page-ttl"><%- __('purchase.complete.page_ttl') %></h1>
    <p class="read"><%- __('purchase.complete.read') %></p>

    <ul class="box bg-light-gray info mb-medium">
        <li>
            <dl>
                <dt><%- __('common.theater') %> / <%- __('common.screen') %></dt>
                <dd><strong><%= performance.theater.name[__('lang')] %> / <%= performance.screen.name[__('lang')] %></strong></dd>
            </dl>
        </li>
        <li>
            <dl>
                <dt><%- __('common.film_title') %></dt>
                <dd><strong><%= performance.film.name[__('lang')] %></strong></dd>
            </dl>
        </li>
        <li>
            <dl>
                <dt><%- __('common.appreciation_date') %></dt>
                <dd><strong><%= moment(performance.day).format('YYYY年MM月DD日') %> <%= moment(performance.time_start, 'hmm').format('HH:mm') %> - <%= moment(performance.time_end, 'hmm').format('HH:mm') %></strong></dd>
            </dl>
        </li>
        <li>
            <dl>
                <dt><%- __('common.seat') %></dt>
                <dd>
                    <% 
                    let seats = [];
                    for (let seat of updateReserve.list_qr) { 
                        seats.push(seat.seat_num);
                    } 
                    %>
                    <p><strong><%= seats.join('、') %></strong></p> 
                </dd>
            </dl>
        </li>
        <li>
            <dl>
                <dt><%- __('common.ticket') %></dt>
                <dd>
                    <%
                    let tikcetObj = {};
                    for (let seat of updateReserve.list_qr) {
                        let code = reserveTickets[seat.seat_num].ticket_code;
                        if (tikcetObj[code]) {
                            tikcetObj[code].length++;
                        } else {
                            tikcetObj[code] = {
                                length: 1,
                                name: reserveTickets[seat.seat_num].ticket_name
                            };
                        }
                    }
                    let tikcets = [];
                    for (let key in tikcetObj) { 
                        tikcets.push(tikcetObj[key].name + '×' + tikcetObj[key].length + '枚');
                    }
                    %>
                    <p><strong><%= tikcets.join('、') %></strong></p>
                </dd>
            </dl>
        </li>
        <li>
            <dl>
                <dt><%- __('common.amount_spent') %></dt>
                <dd><strong>￥<%= price %></strong></dd>
            </dl>
        </li>
    </ul>

    <h2 class="page-ttl"><%- __('purchase.complete.entry') %></h2>
    <p class="read"><%- __('purchase.complete.entry_read') %></p>

    <ul class="box bg-light-gray entry-method">
        <li>
            <dl>
                <dt>
                    <span class="text-icon-dark-blue small-text"><%- __('purchase.complete.entry') %>1</span>
                    <strong><%- __('purchase.complete.entry_01_title') %></strong>
                </dt>
                <dd>
                    <p class="mb-small"><%- __('purchase.complete.entry_01_read') %></p>
                    <div class="image"><img src="/images/common/test.svg" alt=""></div>
                    <div class="button blue-button">
                        <a class="icon-next" href="<%- url('method.ticketing') %>" target="_blank"><%- __('purchase.complete.entry_01_button') %></a>
                    </div>
                </dd>
            </dl>
        </li>
        <li>
            <dl>
                <dt>
                    <span class="text-icon-dark-blue small-text"><%- __('purchase.complete.entry') %>2</span>
                    <strong><%- __('purchase.complete.entry_02_title') %></strong>
                </dt>
                <dd>
                    <p class="mb-small"><%- __('purchase.complete.entry_02_read') %></p>
                    <div class="image"><img src="/images/common/test.svg" alt=""></div>
                    <div class="button blue-button">
                        <a class="icon-next" href="<%- url('inquiry') %>" target="_blank"><%- __('purchase.complete.entry_02_button') %></a>
                    </div>
                </dd>
            </dl>
        </li>
    </ul>

    <div class="button-area clearfix">
        <div class="prev-link"><a class="icon-prev"href="<%- url('index') %>"><%- __('purchase.complete.prev') %></a></div>
    </div>

</div>