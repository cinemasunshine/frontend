<% layout('../layouts/layout') -%>
<% block('script', '<script src="/js/inquiry/inquiry.js"></script>') -%>
<div class="inquiry-confirm">
    <h1 class="page-ttl"><%- __('inquiry.confirm.page_ttl') %></h1>
    <p class="read"><%- __('inquiry.confirm.read') %></p>

    <div class="ghost-button black-button mb-medium">
        <a href="#"><%- __('inquiry.confirm.ticket_button') %></a>
    </div>

    <div class="box bg-light-gray mb-medium">
        <div class="section-ttl"><%- __('inquiry.confirm.section_ttl') %></div>
        <p class="small-text mb-small"><%- __('inquiry.confirm.section_text') %></p>
        <div class="small-text mb-small"><img src="" alt=""></div>
        <div class="ghost-button blue-button">
            <a href="#"><%- __('inquiry.confirm.section_button') %></a>
        </div>
    </div>

    <div class="box bg-light-gray mb-medium">
        <dl>
            <dt><%- __('common.purchase_number') %></dt>
            <dd class="red-text"><strong><%= inquiry.purchaseNo %></strong></dd>
            <dd class="small-text red-text">※チケットの発行・照会等に必要な番号となりますので必ずお控えください。</dd>
        </dl>
    </div>
    
    <ul>
        <% for (let i = 0; i < inquiry.list_reserve_seat.length; i++) { %>
        <li class="ticket">
            <div class="border-bottom-dot box">
                <div class="mb-x-small">
                    <strong class="large-text"><%= inquiry.list_reserve_seat[i].seat_num %></strong>
                    <span>[<%= inquiry.list_ticket[i].ticket_name %>]</span>
                </div>
                <div style="display: none;"><%- __('common.ticket_code') %> : </div>
            </div>
            <div class="border-bottom-dot not-qr">
                <p class="text-center"><%- __('inquiry.confirm.ticket_text') %></p>
            </div>
            <div class="bg-light-gray box">
                <div class="mb-x-small"><%= moment(performance.day).format('YYYY年MM月DD日') %> <%= moment(performance.time_start, 'hmm').format('HH:mm') %>-</div>
                <div class="mb-x-small"><%= performance.theater.name[__('lang')] %></div>
                <div class="mb-x-small"><%= performance.screen.name[__('lang')] %></div>
                <div><%= performance.film.name[__('lang')] %></div>
            </div>
        </li>
        <% } %>
    </ul>
    <div class="button-area clearfix">
        <div class="button next-button blue-button"><a href="<%- url('method.ticketing') %>"><%- __('inquiry.confirm.next') %></a></div>
        <div class="prev-link close-button"><a href="#"><%- __('inquiry.confirm.prev') %></a></div>
    </div>
</div>
<div id="copy" style="display: none"></div>