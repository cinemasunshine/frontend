<div class="modal" data-modal="ticketType">
    <div class="inner">
        <ul>
            <% for (let ticket of tickets) { %>
            <li>
                <dl class="d-table">
                    <dt class="d-td">
                        <div class="mb-small"><%= ticket.ticketName %> <strong>￥<%= formatPrice(ticket.salePrice) %></strong></div>
                        <% if (ticket.ticketNote) { %>
                        <p class="small-text"><%= ticket.ticketNote %></p>
                        <% } %>
                    </dt>
                    <dd class="d-td">
                        <div class="button small-button gray-button ticket-type-select">
                            <a href="#" class="icon-triangle-02" 
                            data-ticket-code="<%= ticket.ticketCode %>"
                            data-ticket-name="<%= ticket.ticketName %>"
                            data-sale-price="<%= ticket.salePrice %>"
                            data-glasses="<%= ticket.glasses %>"
                            data-add-price-glasses="<%= ticket.addPriceGlasses %>"
                            data-mvtk-num="<%= ticket.mvtkNum %>">選択</a>
                        </div>
                    </dd>
                </dl>
            </li>
            <% } %>
        </ul>
    </div>
    <div class="close-button">
        <a class="modal-close" href="#"></a>
    </div>
</div>