<div class="purchase-complete">
    <h1 class="page-ttl"><%- __('purchase.complete.page_ttl') %></h1>
    <p class="read"><%- __('purchase.complete.read') %></p>

    <ul class="box radius bg-light-gray info mb-large form-layout">
        <li class="purchase-number">
            <dl>
                <dt><%- __('common.purchase_number') %></dt>
                <dd>
                    <strong class="red-text large-x-text"><%= reserveSeats.tmp_reserve_num %></strong>
                    <p class="small-x-text">※チケットの発行等に必要な番号となりますので必ず忘れないようにしてください。</p>
                </dd>
            </dl>
        </li>
        <li>
            <dl>
                <dt><%- __('common.theater') %> / <%- __('common.screen') %></dt>
                <dd><%= performance.attributes.theater.name[__('lang')] %> / <%= performance.attributes.screen.name[__('lang')] %></dd>
            </dl>
        </li>
        <li>
            <dl>
                <dt><%- __('common.film_title') %></dt>
                <dd><%= performance.attributes.film.name[__('lang')] %></dd>
            </dl>
        </li>
        <li>
            <dl>
                <dt><%- __('common.appreciation_date') %></dt>
                <dd><%= moment(performance.attributes.day).format('YYYY年MM月DD日') %>(<%= __('week[' + moment(performance.attributes.day).format('ddd') + ']') %>) <%= timeFormat(performance.attributes.time_start) %> - <%= timeFormat(performance.attributes.time_end) %></dd>
            </dl>
        </li>
        <li>
            <dl>
                <dt><%- __('common.seat') %></dt>
                <dd>
                    <% for (ticket of reserveTickets) { %>
                    <p><%= `${ticket.seat_code} ${ticket.ticket_name} ￥${formatPrice(ticket.sale_price)}` %></p>
                    <% } %>
                </dd>
            </dl>
        </li>
        <li>
            <dl>
                <dt><%- __('common.amount_spent') %></dt>
                <dd>￥<%= formatPrice(price) %></dd>
            </dl>
        </li>
        <li>
            <dl>
                <dt><%- __('common.mail_addr') %></dt>
                <dd><%= input.mail_addr %></dd>
            </dl>
        </li>
    </ul>

    <div class="mb-x-large">
        <p class="mb-medium small-x-text"><%- __('purchase.complete.print_read') %></p>
        <div class="button dark-blue-button print-button center-button not-print">
            <a class="icon-print-white" href="#"><%- __('purchase.complete.print') %></a>
        </div>
    </div>

    <div class="not-print">
        <h2 class="page-ttl"><%- __('purchase.complete.entry') %></h2>
        <p class="read"><%- __('purchase.complete.entry_read') %></p>

        <ul class="entry-method heighfix-group">
            <li>
                <dl class="box radius bg-light-gray">
                    <dt class="mb-x-small">
                        <div class="entry-number bg-dark-blue small-x-text text-center mb-x-small"><%- __('purchase.complete.entry') %>1</div>
                        <span class="text-icon-dark-blue small-x-text"><%- __('common.recommend') %></span>
                        <strong><%- __('purchase.complete.entry_01_title') %></strong>
                    </dt>
                    <dd>
                        <p class="mb-small heighfix"><%- __('purchase.complete.entry_01_read') %></p>
                        <div class="image mb-x-small"><img src="/images/common/test.svg" alt=""></div>
                        <div class="button blue-button">
                            <a class="icon-new-tab-white" href="/method/ticketing" target="_blank"><%- __('purchase.complete.entry_01_button') %></a>
                        </div>
                    </dd>
                </dl>
            </li>
            <li>
                <dl class="box radius bg-light-gray">
                    <dt class="mb-x-small">
                        <div class="entry-number bg-gray small-x-text text-center mb-x-small"><%- __('purchase.complete.entry') %>2</div>
                        <strong><%- __('purchase.complete.entry_02_title') %></strong>
                    </dt>
                    <dd>
                        <p class="mb-small heighfix"><%- __('purchase.complete.entry_02_read') %></p>
                        <div class="image mb-x-small"><img src="/images/common/test.svg" alt=""></div>
                        <div class="button blue-button inquiry-button">
                            <a class="icon-new-tab-white" href="/inquiry/login?theater=<%= performance.attributes.theater.id %>&reserve=<%= reserveSeats.tmp_reserve_num %>" target="_blank"><%- __('purchase.complete.entry_02_button') %></a>
                        </div>
                    </dd>
                </dl>
            </li>
        </ul>

        <div class="button-area clearfix">
            <div class="prev-link"><a class="icon-prev-black"href="<%= portalSite %>"><%- __('purchase.complete.prev') %></a></div>
        </div>
    </div>
</div>