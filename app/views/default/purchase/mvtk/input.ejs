<%- contentFor('script') %>
<script src="/js/purchase/mvtk/input.js"></script>
<%- contentFor('body') %>
<div class="purchase-mvtk-input">
    <h1 class="page-ttl"><%- __('purchase.mvtk.input.page_ttl') %></h1>
    <p class="read"><%- __('purchase.mvtk.input.read') %></p>
        
    <div class="ticket-list mb-middle">
        <% for (let i = 0; i < purchaseModel.seatReservationAuthorization.result.updTmpReserveSeatResult.listTmpReserve.length; i++) { %>
        <% if (mvtkInfo[i] !== undefined) { %>
        <div class="mvtk-box active">
            <div class="button light-gray-button remove-button">
                <a href="#"><%- __('common.remove') %></a>
            </div>
            <ul class="box radius bg-light-gray mb-small form-layout">
                <li>
                    <dl>
                        <dt><%- __('common.mvtk_code') %></dt>
                        <dd>
                            <input type="text" name="mvtkCode" value="<%= mvtkInfo[i].code %>" placeholder="<%- __('common.placeholder.mvtk_code') %>" maxlength="10">
                        </dd>
                    </dl>
                </li>
                <li>
                    <dl>
                        <dt><%- __('common.mvtk_password') %></dt>
                        <dd>
                            <input type="password" name="mvtkPassword" value="<%= mvtkInfo[i].password %>" autocomplete="off" placeholder="<%- __('common.placeholder.mvtk_password') %>" maxlength="4">
                        </dd>
                    </dl>
                </li>
            </ul>
        </div>
        <% } else { %>
        <div class="mvtk-box zoom">
            <div class="button light-gray-button remove-button">
                <a href="#"><%- __('common.remove') %></a>
            </div>
            <ul class="box radius bg-light-gray mb-small form-layout">
                <li>
                    <dl>
                        <dt><%- __('common.mvtk_code') %></dt>
                        <dd>
                            <input type="text" name="mvtk_code" value="" placeholder="<%- __('common.placeholder.mvtk_code') %>" maxlength="10">
                        </dd>
                    </dl>
                </li>
                <li>
                    <dl>
                        <dt><%- __('common.mvtk_password') %></dt>
                        <dd>
                            <input type="password" name="mvtk_password" value="" autocomplete="off" placeholder="<%- __('common.placeholder.mvtk_password') %>" maxlength="4">
                        </dd>
                    </dl>
                </li>
            </ul>
        </div>
        <% } %>
        <% } %>
    </div>   
    <% if (purchaseModel.seatReservationAuthorization.result.updTmpReserveSeatResult.listTmpReserve.length > 1) { %>
    <div class="button dark-blue-button add-button mb-middle center-button">
        <a class="icon-add-white" href="#"><%- __('purchase.mvtk.input.add') %></a>
    </div>
    <% } %>
    
    
    <div class="box radius bg-light-gray mb-small">
        <div class="box-ttl"><%- __('purchase.mvtk.input.select_seat') %></div>
        <div class="text-right large-text"><strong><%- __n('%s seat', purchaseModel.seatReservationAuthorization.result.updTmpReserveSeatResult.listTmpReserve.length) %></strong></div>
    </div>

    <p class="small-x-text"><%- __('purchase.mvtk.input.note') %></p>

        
    <form method="post">
        <div class="button-area clearfix">
            <div class="button next-button blue-button"><button class="icon-next-white" type="submit"><%- __('purchase.mvtk.input.next') %></button></div>
            <div class="prev-link"><a class="icon-prev-black"href="/purchase/ticket"><%- __('purchase.mvtk.input.prev') %></a></div>
        </div>
        <input type="hidden" name="mvtk" value="">
        <input type="hidden" name="transactionId" value="<%= purchaseModel.transaction.id %>">
    </form>
<%- include('../../layouts/siteSeal') %>
</div>

<input type="hidden" class="mvtk-validation" value="<%= error %>">

<%- include('../../locales/validation') %>

<%- contentFor('modals') %>
<%- include('../modals/mvtkValidation') %>